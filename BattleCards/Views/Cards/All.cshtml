<h1 class="text-center mt-2">All Cards</h1>
<div class="row mt-2 mb-4">

    <div class="card col-6 col-lg-3 game-card">
        @foreach (var mode in Model)
        {
            <img src="@mode.Image"
                 class="card-img-top img-fluid card-image">
            <div class="card-body">
                <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                    title="@mode.Description">
                    @mode.Name
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">@mode.Keyword</li>
                    <li class="list-group-item">
                        <span class="attack-stat">@mode.Attack</span><span class="health-stat">@mode.Health</span>
                    </li>
                </ul>
                <a href="/Cards/AddToCollection?cardId=@mode.Id" class="btn btn-block btn-primary">Add to Collection</a>
            </div>
        }

    </div>
</div>
